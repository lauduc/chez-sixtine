<script>
    // Configuration
    const WEBHOOK_URL = 'https://n8n.srv1040760.hstgr.cloud/webhook/chez-sixtine-reservation';
    const CHECK_DISPO_URL = 'https://n8n.srv1040760.hstgr.cloud/webhook/chez-sixtine-check-dispo';
    
    // Price grids
    const PRIX = {
        tour: {
            2: { semaine: 85, weekend: 89 },
            4: { semaine: 105, weekend: 109 },
            5: { couchageSupp: 30 }
        },
        drome: {
            2: { semaine: 75, weekend: 79 },
            3: { couchageSupp: 30 }
        },
        duchesse: {
            2: { semaine: 65, weekend: 69 },
            3: { couchageSupp: 30 }
        },
        studio: {
            '1-120': { semaine: 95, weekend: 99 },
            '2-140': { semaine: 105, weekend: 109 },
            '3-combo': { semaine: 125, weekend: 129 }
        }
    };
    
    const TAXE_SEJOUR = 0.70;
    
    // Initialization
    document.addEventListener('DOMContentLoaded', () => {
        // Set minimum date to today
        const today = new Date().toISOString().split('T')[0];
        document.querySelectorAll('.date-arrivee').forEach(input => {
            input.min = today;
        });

        // === TAB MANAGEMENT ===
        document.querySelectorAll('.tab').forEach(tab => {
            tab.addEventListener('click', function() {
                // Remove active class from all tabs
                document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
                
                // Add active class to clicked tab
                this.classList.add('active');
                
                // Get accommodation ID
                const logementId = this.getAttribute('data-logement');
                
                // Hide all accommodation cards
                document.querySelectorAll('.logement-card').forEach(card => {
                    card.classList.remove('active');
                });
                
                // Show corresponding card
                const cardToShow = document.querySelector(`.logement-card[data-logement="${logementId}"]`);
                if (cardToShow) {
                    cardToShow.classList.add('active');
                    
                    // Recalculate price for this card
                    calculatePrice(cardToShow, logementId);
                }
            });
        });
        
        // Initialize default values for each card
        document.querySelectorAll('.logement-card').forEach(card => {
            const logement = card.dataset.logement;
            
            // Set number of people to 2 by default
            const nbPersonnesSelect = card.querySelector('.nb-personnes');
            if (nbPersonnesSelect) {
                // Select option with value "2"
                for (let i = 0; i < nbPersonnesSelect.options.length; i++) {
                    if (nbPersonnesSelect.options[i].value === '2') {
                        nbPersonnesSelect.selectedIndex = i;
                        break;
                    }
                }
            }
            
            // Handle check-in date to set check-out date to next day
            const dateArriveeInput = card.querySelector('.date-arrivee');
            const dateDepartInput = card.querySelector('.date-depart');
            
            if (dateArriveeInput && dateDepartInput) {
                dateArriveeInput.addEventListener('change', function() {
                    if (this.value) {
                        const dateArrivee = new Date(this.value);
                        const dateDepart = new Date(dateArrivee);
                        dateDepart.setDate(dateDepart.getDate() + 1);
                        
                        // Format date as YYYY-MM-DD
                        const year = dateDepart.getFullYear();
                        const month = String(dateDepart.getMonth() + 1).padStart(2, '0');
                        const day = String(dateDepart.getDate()).padStart(2, '0');
                        
                        dateDepartInput.value = `${year}-${month}-${day}`;
                        
                        // Recalculate price
                        calculatePrice(card, logement);
                    }
                });
            }
            
            // Calculate price on every change
            card.querySelectorAll('.date-arrivee, .date-depart, .nb-personnes, .opt-petitdej, .opt-animal, .opt-repas, .opt-bebe').forEach(el => {
                el.addEventListener('change', () => calculatePrice(card, logement));
                el.addEventListener('input', () => calculatePrice(card, logement));
            });
            
            // Initialize price (with delay to ensure DOM is ready)
            setTimeout(() => calculatePrice(card, logement), 200);
            
            // Book button
            const btnReserver = card.querySelector('.btn-reserver');
            if (btnReserver) {
                btnReserver.addEventListener('click', () => openBookingForm(card, logement));
            }
        });
        
        // Form
        const reservationForm = document.getElementById('reservationForm');
        if (reservationForm) {
            reservationForm.addEventListener('submit', submitReservation);
        }
    });
    
    function calculatePrice(card, logement) {
        // Ensure card is accessible
        if (!card) return;
        
        const arrivee = card.querySelector('.date-arrivee')?.value;
        const depart = card.querySelector('.date-depart')?.value;
        const nbPersonnes = card.querySelector('.nb-personnes')?.value;
        const priceDisplay = card.querySelector('.price-amount');
        const breakdown = card.querySelector('.price-breakdown');
        const btnReserver = card.querySelector('.btn-reserver');
        
        if (!arrivee || !depart || !nbPersonnes) {
            if (priceDisplay) priceDisplay.textContent = 'Select your dates';
            if (breakdown) breakdown.textContent = '';
            if (btnReserver) btnReserver.disabled = true;
            return;
        }
        
        const dateArrivee = new Date(arrivee);
        const dateDepart = new Date(depart);
        
        if (dateDepart <= dateArrivee) {
            if (priceDisplay) priceDisplay.textContent = 'Invalid dates';
            if (breakdown) breakdown.textContent = '';
            if (btnReserver) btnReserver.disabled = true;
            return;
        }
        
        const nbNuits = Math.ceil((dateDepart - dateArrivee) / (1000 * 60 * 60 * 24));
        
        // Calculate base price
        let prixTotal = 0;
        let details = [];
        
        // Night prices
        const grille = PRIX[logement]?.[nbPersonnes];
        
        if (!grille) {
            if (priceDisplay) priceDisplay.textContent = 'Invalid configuration';
            return;
        }
        
        // Determine if weekend (Friday/Saturday) or summer holidays (July-August)
        let nbWeekend = 0;
        let nbSemaine = 0;
        
        for (let d = new Date(dateArrivee); d < dateDepart; d.setDate(d.getDate() + 1)) {
            const day = d.getDay();
            const month = d.getMonth();
            
            // Weekend = Friday/Saturday OR July/August
            if (day === 5 || day === 6 || month === 6 || month === 7) {
                nbWeekend++;
            } else {
                nbSemaine++;
            }
        }
        
        if (grille.semaine && grille.weekend) {
            prixTotal += (nbSemaine * grille.semaine) + (nbWeekend * grille.weekend);
            
            let detailNuits = `${nbNuits} night${nbNuits > 1 ? 's' : ''}`;
            if (nbSemaine > 0 && nbWeekend > 0) {
                detailNuits += ` (${nbSemaine}√ó${grille.semaine}‚Ç¨ + ${nbWeekend}√ó${grille.weekend}‚Ç¨)`;
            } else if (nbSemaine > 0) {
                detailNuits += ` (${nbSemaine}√ó${grille.semaine}‚Ç¨)`;
            } else {
                detailNuits += ` (${nbWeekend}√ó${grille.weekend}‚Ç¨)`;
            }
            
            details.push(detailNuits);
        } else if (grille.couchageSupp) {
            const basePrice = logement === 'tour' ? (nbWeekend > nbSemaine ? 109 : 105) : 
                              logement === 'drome' ? (nbWeekend > nbSemaine ? 79 : 75) :
                              (nbWeekend > nbSemaine ? 69 : 65);
            prixTotal += (nbNuits * basePrice) + (nbNuits * grille.couchageSupp);
            details.push(`${nbNuits} night${nbNuits > 1 ? 's' : ''} + extra bed`);
        }
        
        // Tourist tax
        const nbPersonnesNum = nbPersonnes.includes('-') ? parseInt(nbPersonnes.split('-')[0]) : parseInt(nbPersonnes);
        const taxeSejour = TAXE_SEJOUR * nbPersonnesNum * nbNuits;
        prixTotal += taxeSejour;
        details.push(`Tourist tax: ${taxeSejour.toFixed(2)}‚Ç¨`);
        
        // Options
        const petitdej = parseInt(card.querySelector('.opt-petitdej')?.value || 0);
        if (petitdej > 0) {
            const prixPetitDej = petitdej * 9;
            prixTotal += prixPetitDej;
            details.push(`${petitdej} breakfast: ${prixPetitDej}‚Ç¨`);
        }
        
        const animal = card.querySelector('.opt-animal')?.checked || false;
        if (animal) {
            prixTotal += 10;
            details.push('Pet fee: 10‚Ç¨');
        }
        
        const repas = parseInt(card.querySelector('.opt-repas')?.value || 0);
        if (repas > 0) {
            const prixRepas = repas * 25;
            prixTotal += prixRepas;
            details.push(`${repas} host meals: ${prixRepas}‚Ç¨`);
        }
        
        const bebe = card.querySelector('.opt-bebe')?.checked || false;
        if (bebe) {
            prixTotal += 20;
            details.push('Baby crib: 20‚Ç¨');
        }
        
        if (priceDisplay) priceDisplay.textContent = `${prixTotal.toFixed(2)}‚Ç¨`;
        if (breakdown) breakdown.textContent = details.join(' ‚Ä¢ ');
        if (btnReserver) btnReserver.disabled = false;
    }
    
    async function openBookingForm(card, logement) {
        const arrivee = card.querySelector('.date-arrivee').value;
        const depart = card.querySelector('.date-depart').value;
        const nbPersonnes = card.querySelector('.nb-personnes').value;
        const prixTotal = card.querySelector('.price-amount').textContent;
        
        if (!arrivee || !depart || !nbPersonnes) {
            await showAlert('Please select all information', 'error', false);
            return;
        }
        
        await showAlert('‚è≥ Checking availability...', 'info', false);
        
        try {
            const checkResponse = await fetch(CHECK_DISPO_URL, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                    logement: logement,
                    arrivee: arrivee,
                    depart: depart
                })
            });
            
            const checkResult = await checkResponse.json();
            
            if (!checkResult.available) {
                await showAlert('‚ùå Dates not available. Please choose other dates or call us at +33 4 75 00 00 00 for more availability.', 'error', false);
                return;
            }
            
            await showAlert('‚úÖ Dates available!', 'success', false);
            
        } catch (error) {
            await showAlert('‚ö†Ô∏è Unable to check availability. Please try again or call us.', 'error', false);
            return;
        }
        
        const logementNames = {
            tour: 'La Tour d\'Albon',
            drome: 'La Dr√¥me',
            duchesse: 'La Duchesse',
            studio: 'Le Studio'
        };
        
        document.getElementById('bookingSummary').innerHTML = `
            <strong>Accommodation:</strong> ${logementNames[logement]}<br>
            <strong>From:</strong> ${new Date(arrivee).toLocaleDateString('en-US')} 
            <strong>to:</strong> ${new Date(depart).toLocaleDateString('en-US')}<br>
            <strong>People:</strong> ${nbPersonnes}<br>
            <strong>Total price:</strong> ${prixTotal}
        `;
        
        window.currentReservation = {
            logement,
            arrivee,
            depart,
            nbPersonnes,
            prixTotal,
            petitdej: parseInt(card.querySelector('.opt-petitdej')?.value || 0),
            animal: card.querySelector('.opt-animal')?.checked || false,
            repas: parseInt(card.querySelector('.opt-repas')?.value || 0),
            bebe: card.querySelector('.opt-bebe')?.checked || false
        };
        
        // Hide tabs and cards
        document.querySelector('.tabs').style.display = 'none';
        document.querySelectorAll('.logement-card').forEach(card => {
            card.style.display = 'none';
        });
        
        // Show form
        document.getElementById('bookingFormContainer').style.display = 'block';
        
        // Scroll to form
        document.getElementById('bookingFormContainer').scrollIntoView({ behavior: 'smooth' });
    }
    
    function returnToBooking() {
        // Hide form
        document.getElementById('bookingFormContainer').style.display = 'none';
        
        // Show tabs and cards
        document.querySelector('.tabs').style.display = 'flex';
        
        // Show active card
        const activeTab = document.querySelector('.tab.active');
        if (activeTab) {
            const logementId = activeTab.getAttribute('data-logement');
            const cardToShow = document.querySelector(`.logement-card[data-logement="${logementId}"]`);
            if (cardToShow) {
                cardToShow.style.display = 'block';
            }
        }
        
        // Reset form
        document.getElementById('reservationForm').reset();
    }
    
    async function submitReservation(e) {
        e.preventDefault();
        
        const loading = document.querySelector('.loading');
        const submitBtn = document.querySelector('.btn-submit');
        
        loading.style.display = 'block';
        submitBtn.disabled = true;
        
        const data = {
            ...window.currentReservation,
            nom: document.getElementById('nom').value,
            prenom: document.getElementById('prenom').value,
            email: document.getElementById('email').value,
            telephone: document.getElementById('telephone').value,
            adresse: document.getElementById('adresse').value,
            ville: document.getElementById('ville').value,
            code_postal: document.getElementById('code_postal').value,
            pays: document.getElementById('pays').value,
            message: document.getElementById('message').value
        };
        
        try {
            const response = await fetch(WEBHOOK_URL, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(data)
            });
            
            const result = await response.json();
            
            if (result.success) {
                // Hide form
                document.getElementById('bookingFormContainer').style.display = 'none';
                
                // Get main container
                const container = document.querySelector('.container');
                
                // Save title and subtitle
                const title = container.querySelector('h1').outerHTML;
                const subtitle = container.querySelector('.subtitle').outerHTML;
                
                // Clear container
                container.innerHTML = '';
                
                // Add title and subtitle
                container.insertAdjacentHTML('afterbegin', title);
                container.insertAdjacentHTML('beforeend', subtitle);
                
                // Add top alert container
                const topAlertContainer = document.createElement('div');
                topAlertContainer.id = 'alertContainer';
                container.appendChild(topAlertContainer);
                
                // Add bottom alert container
                const bottomAlertContainer = document.createElement('div');
                bottomAlertContainer.id = 'bottomAlertContainer';
                container.appendChild(bottomAlertContainer);
                
                // Show confirmation message
                const confirmationHTML = `
                    <div class="confirmation-success">
                        <div class="check-icon">‚úÖ</div>
                        <h2>Booking sent successfully!</h2>
                        <p><strong>Thank you ${data.prenom} ${data.nom}!</strong></p>
                        <p>We have received your booking request.</p>
                        <p>üìß A confirmation email has been sent to:<br><strong>${data.email}</strong></p>
                        <p style="margin-top: 30px; font-size: 0.9em; opacity: 0.9;">
                            We will contact you very soon to finalize your booking.
                        </p>
                    </div>
                `;
                
                container.insertAdjacentHTML('beforeend', confirmationHTML);
                
                // Scroll to top after reconstruction
                setTimeout(() => {
                    const newTopAlertContainer = document.getElementById('alertContainer');
                    if (newTopAlertContainer) {
                        newTopAlertContainer.scrollIntoView({ 
                            behavior: 'smooth', 
                            block: 'start' 
                        });
                    } else {
                        window.scrollTo({ top: 0, behavior: 'smooth' });
                    }
                }, 100);
                
                // Show permanent success message
                await showAlert('‚úÖ Booking confirmed! An email has been sent to you.', 'success', false);
                
            } else {
                await showAlert(result.message || 'Error during booking. Please try again.', 'error', false);
            }
        } catch (error) {
            await showAlert('Connection error. Please try again later.', 'error', false);
        } finally {
            loading.style.display = 'none';
            submitBtn.disabled = false;
        }
    }
    
    function showAlert(message, type, autoHide = false) {
        return new Promise((resolve) => {
            const isMobile = window.innerWidth < 768;
            
            // Check if top container exists, create if not
            let topAlertContainer = document.getElementById('alertContainer');
            if (!topAlertContainer) {
                topAlertContainer = document.createElement('div');
                topAlertContainer.id = 'alertContainer';
                const container = document.querySelector('.container');
                if (container) {
                    container.insertBefore(topAlertContainer, container.firstChild);
                }
            }
            
            // Check if bottom container exists, create if not
            let bottomAlertContainer = document.getElementById('bottomAlertContainer');
            if (!bottomAlertContainer) {
                bottomAlertContainer = document.createElement('div');
                bottomAlertContainer.id = 'bottomAlertContainer';
                bottomAlertContainer.style.marginTop = '20px';
                const container = document.querySelector('.container');
                if (container) {
                    container.appendChild(bottomAlertContainer);
                }
            }
            
            // CLEAR ALL OLD MESSAGES
            topAlertContainer.innerHTML = '';
            bottomAlertContainer.innerHTML = '';
            
            // Function to create an alert
            const createAlertElement = () => {
                const alert = document.createElement('div');
                alert.className = `alert alert-${type}`;
                alert.style.display = 'block';
                alert.style.padding = '15px';
                alert.style.marginBottom = '10px';
                alert.style.borderRadius = '8px';
                alert.style.position = 'relative';
                alert.style.zIndex = '1000';
                alert.style.boxShadow = '0 4px 10px rgba(0,0,0,0.2)';
                alert.style.fontSize = isMobile ? '14px' : '16px';
                alert.style.fontWeight = 'bold';
                
                // Create message content
                const messageSpan = document.createElement('span');
                messageSpan.textContent = message;
                alert.appendChild(messageSpan);
                
                // Add close button for manual closing
                if (!autoHide) {
                    const closeBtn = document.createElement('span');
                    closeBtn.innerHTML = '&times;';
                    closeBtn.style.cssText = 'float: right; cursor: pointer; font-weight: bold; margin-left: 10px; font-size: 20px; line-height: 20px;';
                    closeBtn.onclick = function() {
                        alert.style.display = 'none';
                    };
                    alert.appendChild(closeBtn);
                }
                
                return alert;
            };
            
            if (isMobile) {
                // On mobile: ONLY ONE message at the bottom
                const bottomAlert = createAlertElement();
                bottomAlertContainer.appendChild(bottomAlert);
                
                // Smooth scroll to bottom to see the message
                setTimeout(() => {
                    bottomAlertContainer.scrollIntoView({ 
                        behavior: 'smooth', 
                        block: 'end' 
                    });
                    resolve();
                }, 50);
            } else {
                // On desktop: TWO messages (top and bottom)
                const topAlert = createAlertElement();
                topAlertContainer.appendChild(topAlert);
                
                const bottomAlert = createAlertElement();
                bottomAlertContainer.appendChild(bottomAlert);
                
                // Scroll to top to see top message
                setTimeout(() => {
                    topAlertContainer.scrollIntoView({ 
                        behavior: 'smooth', 
                        block: 'start' 
                    });
                    
                    // Backup scroll
                    setTimeout(() => {
                        window.scrollTo({
                            top: 0,
                            behavior: 'smooth'
                        });
                    }, 50);
                    
                    resolve();
                }, 50);
            }
            
            // Auto-hide if requested
            if (autoHide) {
                setTimeout(() => {
                    if (isMobile) {
                        bottomAlertContainer.innerHTML = '';
                    } else {
                        topAlertContainer.innerHTML = '';
                        bottomAlertContainer.innerHTML = '';
                    }
                }, 5000);
            }
        });
    }
    </script>
</body>
